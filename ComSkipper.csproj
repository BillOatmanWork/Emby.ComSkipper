<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>1.2.0.0</Version>
    <AssemblyName>ComSkipper</AssemblyName>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/BillOatmanWork/Emby.ComSkipper</RepositoryUrl>
    <RepositoryType>github</RepositoryType>
    <PackageLicenseFile>C:\Stuff\Repos\ComSkipper\Emby.ComSkipper\LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Commercial Skipper Plugin.docx" />
    <None Remove="Commercial Skipper Plugin.pdf" />
    <None Remove="Configuration\ComSkipper.html" />
    <None Remove="Configuration\ComSkipper.js" />
    <None Remove="LICENSE.md" />
    <None Remove="logo.png" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Configuration\ComSkipper.html" />
    <EmbeddedResource Include="Configuration\ComSkipper.js" />
    <EmbeddedResource Include="logo.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MediaBrowser.Server.Core" Version="4.6.0.50" />
    <PackageReference Include="System.Memory" Version="4.5.4" />
  </ItemGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
